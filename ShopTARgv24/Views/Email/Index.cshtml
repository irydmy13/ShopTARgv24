@model ShopTARgv24.Core.Dto.EmailDto

<div class="container">
    <h2>Send Email</h2>

    <form method="post" asp-controller="Email" asp-action="SendEmail" enctype="multipart/form-data">

        <div class="form-group mb-3">
            <label asp-for="To" class="form-label">To (Email)</label>
            <input asp-for="To" class="form-control" placeholder="recipient@example.com" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Subject" class="form-label">Subject</label>
            <input asp-for="Subject" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Body" class="form-label">Message</label>
            <textarea asp-for="Body" class="form-control" rows="5"></textarea>
        </div>

        <div class="form-group mb-3">
            <label class="form-label">Attachments</label>
            <input asp-for="Attachment" class="form-control" type="file" multiple />
        </div>

        <button type="submit" class="btn btn-primary">Send Email</button>
    </form>
</div>