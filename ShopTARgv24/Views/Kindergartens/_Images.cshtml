@model ShopTARgv24.Models.Kindergartens.KindergartenImageViewModel

<div class="card me-3 mb-3" style="width: 16rem;">
    <img src="@Model.Image" class="card-img-top" alt="@Model.ImageTitle" style="object-fit: cover; height: 180px;">
    <div class="card-body">
        <h6 class="card-title text-truncate" title="@Model.ImageTitle">@Model.ImageTitle</h6>

        <form asp-action="RemoveImage" asp-controller="Kindergartens" method="post" class="mt-2">
            @Html.AntiForgeryToken()
            <input type="hidden" name="ImageId" value="@Model.ImageId" />
            <input type="hidden" name="KindergartenId" value="@Model.KindergartenId" />
            <button type="submit" class="btn btn-outline-danger btn-sm w-100">Delete</button>
        </form>
    </div>
</div>